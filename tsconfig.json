        "jsx": "react-jsx",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "incremental": true,
        "lib": [
            "ESNext",
            "DOM"
